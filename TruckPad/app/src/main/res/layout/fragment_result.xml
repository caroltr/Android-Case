<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.result.ResultFragment">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_from_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hint_from" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_to_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hint_to" />

            <TextView
                android:id="@+id/tv_to"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_axis_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_axis" />

            <TextView
                android:id="@+id/tv_axis"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_distance_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_distance" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_duration_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_duration" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_toll_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_toll" />

            <TextView
                android:id="@+id/tv_toll"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_amount_fuel_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_amount_fuel" />

            <TextView
                android:id="@+id/tv_amount_fuel"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_price_fuel_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_price_fuel" />

            <TextView
                android:id="@+id/tv_price_fuel"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_total_price_title"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_total_price" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_weight="1"
                android:gravity="center" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>